<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:id="@+id/student_class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="Class name"
            android:textSize="20dp"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/student_class_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/student_class_name"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:text="Class ID"/>

        <TextView
            android:id="@+id/student_class_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/student_class_id"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:text="Class Date"/>

        <TextView
            android:id="@+id/student_class_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_class_name"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="Classroom"/>

    </RelativeLayout>

</RelativeLayout>